<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <p><strong><%= link_to post.user %></strong></p>
        <p><%= link_to image_tag(post.image), post %></p>
        <p><%= post.caption %></p>
        <p><%= link_to 'Edit', edit_post_path(post) %></p>
        <p><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
