<!DOCTYPE html>
<html>
  <head>
    <title>Rinstagram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>

    <%= link_to 'Sign Up', :signup %>
    <%= yield %>
  </body>
</html>
